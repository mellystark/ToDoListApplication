@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        .hero-section {
            background: linear-gradient(to right, #4a90e2, #50e3c2);
            color: #fff;
            padding: 50px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3rem;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-bottom: 30px;
            }

        .btn-custom {
            background-color: #50e3c2;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #4a90e2;
            }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1 class="display-4">Welcome to Your To-Do List Application</h1>
            <p class="lead">Manage your tasks efficiently and stay organized. Click below to view and manage your to-dos.</p>
            <a href="@Url.Action("Index", "TodoItems")" class="btn btn-custom">Go to Todo List</a>
        </div>
    </div>

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
