@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f6d2e8, #fbbee3); /* Arka plan için renk geçişi */
            font-family: 'Arial', sans-serif; /* Yazı tipi */
        }

        .hero-section {
            background: rgba(255, 255, 255, 0.9); /* Beyaz yarı saydam arka plan */
            border-radius: 15px; /* Köşeleri yuvarla */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Gölge efekti */
            color: black;
            padding: 60px 30px; /* Daha fazla padding */
            text-align: center;
            max-width: 800px; /* Maksimum genişlik */
            margin: 50px auto; /* Ortala ve üstten boşluk bırak */
        }

            .hero-section h1 {
                font-size: 2.5rem; /* Başlık boyutu */
                margin-bottom: 20px;
                font-weight: bold; /* Kalın başlık */
            }

            .hero-section p {
                font-size: 1.2rem; /* Paragraf boyutu */
                margin-bottom: 30px;
                color: #333; /* Koyu gri metin rengi */
            }

        .btn-custom {
            background-color: #ff4f81; /* Buton arka plan rengi */
            color: #fff; /* Buton metin rengi */
            border: none;
            padding: 12px 24px; /* Buton padding */
            font-size: 1.1rem; /* Buton metin boyutu */
            border-radius: 25px; /* Butonun köşelerini yuvarla */
            transition: background-color 0.3s, transform 0.3s; /* Geçiş efektleri */
            margin: 5px; /* Butonlar arası boşluk */
        }

            .btn-custom:hover {
                background-color: #f6d2e8; /* Hover durumunda daha koyu pembe */
                transform: scale(1.05); /* Hover durumunda büyütme efekti */
            }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="container">
            <h1 class="display-4">Welcome to Your To-Do List Application</h1>
            <p class="lead">Manage your tasks efficiently and stay organized. Click below to view and manage your to-dos.</p>
            <a href="@Url.Action("Index", "TodoItems")" class="btn btn-custom">Go to Todo List</a>

            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Profile", "Account")" class="btn btn-custom">Go to Profile</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-custom">Login</a>
            }
        </div>
    </div>

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
