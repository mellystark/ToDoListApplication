@model ToDoListApplication.Models.TodoItemModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-white">@ViewData["Title"]</h1>

    <div class="card shadow-lg rounded">
        <div class="card-body">
            <h4 class="mb-3 text-primary">Create New TodoItem</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Title"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox" id="isCompleted" />
                    <label class="form-check-label" for="isCompleted">
                        @Html.DisplayNameFor(model => model.IsCompleted)
                    </label>
                </div>

                <!-- Gizli UserId alanı -->
                <input type="hidden" asp-for="UserId" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success rounded-pill">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a class="btn btn-secondary rounded-pill" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8d3e3; /* Arka plan rengi pembe */
        font-family: 'Arial', sans-serif; /* Yazı tipi */
    }

    h1 {
        font-size: 2.5rem; /* Başlık boyutu */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Başlığa gölge efekti */
    }

    .card {
        background-color: #ffffff; /* Kartın arka plan rengi beyaz */
        border-radius: 15px; /* Kart köşe yuvarlama */
        border: 1px solid #ff4f81; /* Kart kenar rengi pembe */
    }

    .card-title {
        font-weight: bold; /* Kart başlığı kalın yazı */
    }

    .btn {
        border-radius: 10px; /* Buton köşe yuvarlama */
        padding: 10px 20px; /* Buton içi boşluk */
    }

    .form-check-input {
        border-radius: 5px; /* Checkbox için köşe yuvarlama */
    }

    .badge {
        border-radius: 12px; /* Badge'ler için yuvarlak köşe */
    }
</style>
